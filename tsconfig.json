{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
